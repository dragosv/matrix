{
    "swagger": "2.0",
    "info": {
        "description": "Basic web server written in GoLang that performs operations on a matrix.",
        "title": "Matrix web server API",
        "contact": {
            "name": "Dragos Varovici",
            "url": "https://github.com/dragosv"
        },
        "license": {
            "name": "Mozilla Public License 2.0",
            "url": "https://www.mozilla.org/en-US/MPL/2.0/"
        },
        "version": "1.0"
    },
    "host": "localhost:8080",
    "paths": {
        "/echo": {
            "post": {
                "description": "Returns the matrix as a string in matrix format",
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "text/html"
                ],
                "tags": [
                    "matrix"
                ],
                "summary": "Matrix echo",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/flatten": {
            "post": {
                "description": "Returns the matrix as a 1 line string, with values separated by commas.",
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "text/html"
                ],
                "tags": [
                    "matrix"
                ],
                "summary": "Matrix flatten",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/invert": {
            "post": {
                "description": "returns the matrix as a string in matrix format where the columns and rows are inverted.",
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "text/html"
                ],
                "tags": [
                    "matrix"
                ],
                "summary": "Matrix invert",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/multiply": {
            "post": {
                "description": "Returns the product of the integers in the matrix.",
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "text/html"
                ],
                "tags": [
                    "matrix"
                ],
                "summary": "Matrix multiply",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/sum": {
            "post": {
                "description": "Returns the sum of the integers in the matrix.",
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "text/html"
                ],
                "tags": [
                    "matrix"
                ],
                "summary": "Matrix sum",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}